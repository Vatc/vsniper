<VBox fx:id="rootPane" alignment="CENTER" opacity="0.44" prefHeight="749.0" prefWidth="954.0" spacing="20.0" stylesheets="@atlantafx/base.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.vatc.kokscraftstats.FirstSceneController">
   <AnchorPane prefHeight="32.0" prefWidth="946.0">
      <children>
         <Button fx:id="closeButton" alignment="CENTER_RIGHT" contentDisplay="GRAPHIC_ONLY" layoutX="872.0" onAction="#closeWindow" style="-fx-focus-traversable: false;" text="Close" />
         <Button fx:id="minimizeButton" alignment="CENTER_RIGHT" contentDisplay="GRAPHIC_ONLY" layoutX="817.0" onAction="#minimizeWindow" style="-fx-focus-traversable: false;" text="Minimize" />
         <Button fx:id="settingsButton" alignment="CENTER_RIGHT" contentDisplay="GRAPHIC_ONLY" layoutX="761.0" onAction="#switchToSecondScene" style="-fx-focus-traversable: false;" text="Settings" />
