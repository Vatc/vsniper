       <TableColumn fx:id="playerRank" prefWidth="30.0" style="-fx-border-width: 0;" text="Ranga" />
       <TableColumn fx:id="playerName" prefWidth="75.0" style="-fx-border-width: 0;" text="Nick" />
       <TableColumn fx:id="playerTags" prefWidth="75.0" style="-fx-border-width: 0;" text="Tagi" />
     </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
   </TableView>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
